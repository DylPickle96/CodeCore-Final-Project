<!DOCTYPE html>
<html>
  <head>
    <title>Finalprojectdraft</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script src="//maps.google.com/maps/api/js?key=AIzaSyCoc0Rtby_hdaDPqmUhGk4aaYEqLJ7o27Y"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

  </head>

  <body>
    <nav>
      <ul class="navbar">
        <li><%= link_to('Home', home_path) %></li>
        <li><%= link_to('Sign Up', new_user_path) %></li>
        <li><%= link_to('Sign In', new_session_path) %></li>
        <li><%= link_to('Sign Out', sessions_path, method: :delete) %></li>
        <li><%= link_to('Posts', posts_path) %></li>
        <li><%= link_to('Messages', conversations_path) %></li>
        <li><%= link_to('Map', maps_path) %></li>
        <% if user_signed_in? %>
          <li><%= current_user.first_name %></li>
        <% end %>
      </ul>
      <hr />
    </nav>

    <div id="flash-message">
      <% if flash[:notice] %>
        <div class='alert alert-success'><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class='alert alert-danger'><%= flash[:alert] %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
