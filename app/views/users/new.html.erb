<div class='container-fluid'>
  <div class='row'>
    <div class='col-xs-12 col-md-6 col-md-offset-3 signup-container'>
      <h1 class='signup-header'> Sign Up </h1>
      <hr style='border-top: 1px solid #FF8C00;' />

      <%= form_for @user do |f| %>
        <div>
          <%= f.label :first_name, class:'form-text-style' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :last_name, class:'form-text-style' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :email, class:'form-text-style' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :password, class:'form-text-style' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :password_confirmation, class:'form-text-style' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
          <%= submit_tag 'Sign Up', class:'btn btn-warning login-button' %>
      <% end %>
    </div>
  </div>
</div>
