<div class='container-fluid'>
  <div class='login-background'>
    <div class='row form-margin-container'>
      <div class='col-xs-12 col-md-6 col-md-offset-3 login-container'>
        <h1 class='login-header'> User Log In </h1>
        <hr style='border-top: 1px solid #FF8C00;' />
        <%= form_tag sessions_path do %>
          <div>
            <%= label_tag :email, 'Email', style: 'color:black;  font-size: 1.5em;' %><br />
            <%= email_field_tag :email, '', class: 'form-control' %>
          </div>
          <div>
            <%= label_tag :password, 'Password', style: 'color:black; font-size: 1.5em;' %><br />
            <%= password_field_tag  :password, '', class: 'form-control' %>
          </div>
          <%= submit_tag 'Sign In', class:'btn btn-warning login-button' %>
        <% end %>
      </div>
    </div>
  </div>


  <div class='row'>
    <div class='col-xs-12 col-md-12'>
      <%= render '/layouts/footer.html.erb' %>
    </div>
  </div>
</div>
